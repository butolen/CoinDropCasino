@inherits LayoutComponentBase
@inject IJSRuntime JS
@inject NavigationManager Navigation

<main>
    <NavMenu />
    @Body
</main>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

<!-- Add this script tag if using external JS file -->
<script src="/js/logoutPolling.js" defer></script>

@code {

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                // Only call if using inline initialization
                await JS.InvokeVoidAsync("initializeLogoutPolling");
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error initializing logout polling: {ex.Message}");
            }
        }
    }

}