@page "/"

<div class="casino-home">
    <header class="navbar">
        <div class="logo">ONLINE CASINO</div>
        <nav class="nav-links">
            <a href="/roulette">Roulette</a>
            <a href="/blackjack">Blackjack</a>
            <NavLink href="/history">History</NavLink>
        </nav>
        <div class="user-area">
            <button class="cashflow-btn">💲 CASH FLOW ▾</button>
            <span class="user-icon">👤</span>
        </div>
    </header>

    <section class="hero-section">
        <img src="/images/casino_home.jpeg" alt="Casino" class="hero-img" />
        <div class="hero-text">
            <h2>Spin. Bet. Win.</h2>
            <p>Your game starts now.</p>
            <button class="spin-btn" @onclick='() => Nav.NavigateTo("/roulette")'>Spin a Round?</button>

        </div>
    </section>
</div>


